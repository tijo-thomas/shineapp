<!DOCTYPE html>
<html>
<head>
  <title>Shine</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body class="container">
	<% if notice.present? %>
		<aside class="alert alert-info"> <!-- This is using bootstrap's alert component -->
			<%= notice %>
		</aside>
	<% end %>
	<% if alert.present? %>
		<aside class="alert alert-danger"> <!-- This is using bootstrap's alert component -->
			<%= alert %>
		</aside>
	<% end %>

<%= yield %>

</body>
</html>
